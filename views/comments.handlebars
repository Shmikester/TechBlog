<div class="columns is-centered is-half-tablet">
    <div class="box">
        <div class="container mb-3">
            <h1 class="title">{{title}}</h1>
        </div>
        <div class="container my-3">
            <h2 class="subtitle">{{date}}</h2>
            <p>{{body}}</p>
        </div>
        <form>
            <div class="field">
                <div class="control">
                    <textarea class="textarea" placeholder="Enter your comment..." id="addCommentText"></textarea>
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <textarea class="is-hidden" id="addCommentId">{{id}}</textarea>
                </div>
            </div>
            <div class="field is-grouped is-grouped-centered mt-5">
                <p class="control">
                    <button type="submit" class="button is-primary" id="editPostSubmit">Add Comment</button>
                </p>
                <p class="control">
                    <a href="/" class="button is-light">Cancel</a>
                </p>
            </div>
        </form>
    </div>
</div>

<script src="/javascript/addComment.js"></script>